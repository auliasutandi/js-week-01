/* NO 1 */
SELECT * 
FROM T_POLICY
JOIN T_CLIENT
ON T_POLICY.CLIENT_NUMBER = T_CLIENT.CLIENT_NUMBER
WHERE POLICY_SUBMIT_DATE > '2018/1/15' AND EXTRACT(MONTH FROM T_CLIENT.BIRTH_DATE) = '9'


/*NO 2*/
SELECT *
FROM T_POLICY
INNER JOIN T_AGENT
ON T_POLICY.AGENT_CODE = T_AGENT.AGENT_CODE
WHERE  POLICY_STATUS='INFORCE' AND AGENT_OFFICE='JAKARTA';

/*NO 3*/
Select employee_id, first_name,job_id,salary,
	case when e.job_id = 9 then * salary*2 end bonus
From employees e

SELECT AGENT_CODE, COMMISSION, PREMIUM, BASIC_COMMISSION,
CASE WHEN T_AGENT.BASIC_COMMISSION THEN T_AGENT.BASIC_COMMISSION = (T_POLICY.COMMISSION / T_POLICY.PREMIUM) * 100
END BASIC_COMMISSION
FROM T_POLICY ORDER BY T_AGENT

SELECT * FROM T_AGENT JOIN T_POLICY
UPDATE T_AGENT.BASIC_COMMISSION = (T_POLICY.COMMISSION / T_POLICY.PREMIUM)* 100;









